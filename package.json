{
  "name": "cloudfront-updator",
  "version": "3.0.0",
  "description": "Modern CloudFront distribution updator with AWS SDK v3",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run format && npm run lint && npm run typecheck && npm run test && npm run build",
    "release": "np"
  },
  "keywords": ["aws", "cloudfront", "aws-sdk-v3", "distribution", "cdn"],
  "bugs": {
    "url": "https://github.com/wpkyoto/cloudfront-updator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wpkyoto/cloudfront-updator.git"
  },
  "author": "Hidetaka Okamoto <info@wp-kyoto.net> (https://wp-kyoto.net)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@aws-sdk/client-cloudfront": "^3.932.0",
    "deep-object-diff": "^1.1.9",
    "p-limit": "^6.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.9.3",
    "@vitest/coverage-v8": "^4.0.9",
    "np": "^10.2.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.7.2",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^4.0.9"
  },
  "overrides": {
    "tmp": "^0.2.5"
  }
}
